/* 顶部信息 */

.head-image {
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(10px);
}

.base-info {
  width: 700rpx;
  height: 280rpx;
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 50rpx;
  left: 40rpx;
}

.title {
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2px;
}

.country-time {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #fff;
}

.like {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
}

.highlight-font {
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}

.plain-font {
  color: #666;
  font-size: 22rpx;
  margin-right: 30rpx;
}

.move-image {
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}

/* 电影原始信息 */

.summary {
  margin-left: 40rpx;
  margin-top: 40rpx;
  color: #777;
}

.original-title {
  color: #1f3463;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.flex-row {
  margin-bottom: 10rpx;
}

.mark {
  margin-right: 30rpx;
  white-space: nowrap;
  color: #999;
}

.hr {
  margin-top: 45rpx;
  height: 1px;
  width: 100%;
  background-color: #d9d9d9;
}

.synopsis {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.synopsis-font {
  color: #999;
}

.summary-content {
  margin-top: 20rpx;
  margin-right: 40rpx;
  line-height: 40rpx;
  letter-spacing: 1px;
}

/* 影人信息 */

.cast {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.cast-font {
  color: #999;
  margin-bottom: 40rpx;
}

.cast-imgs {
  /* scoll-view要设置此属性才能实现x轴滚动 */
  white-space: nowrap;
}

.cast-container {
  display: inline-flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  margin-right: 40rpx;
  width: 170rpx;
  text-align: center;
  white-space: normal;
}

.cast-img {
  width: 170rpx;
  height: 210rpx;
}

.cast-name {
  margin: 10rpx auto 0;
}
