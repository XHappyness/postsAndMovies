.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff; 
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 20rpx;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author-date .post-author {
  width: 60rpx;
  height: 50rpx;
  vertical-align: middle;
}

.post-author-date .post-date {
  margin-left: 20rpx;
  font-size: 26rpx;
  vertical-align: middle;
  margin-bottom: 5px;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 5px;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-left: 10px;
  line-height: 40rpx;
  letter-spacing: 2rpx;
  margin-bottom: 20px;
} 

.post-icon-image {
  width: 16px;
  height: 16px;
  margin-left: 10px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-icon-text {
  font-size: 20rpx;
  color: #666;
  vertical-align: middle;
  margin-right: 20px;
}